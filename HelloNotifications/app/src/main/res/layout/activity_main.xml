<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:onClick="showBasicNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Notification" />

    <Button
        android:onClick="showExpandedNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expanded Notification"
        android:layout_marginTop="8dp" />

    <Button
        android:onClick="showExpandedWearNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Wear Notification" />

    <Button
        android:onClick="showExpandedWearPagesNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yummier Wear Notification" />

    <Button
        android:onClick="showInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say Something" />




</LinearLayout>
